<%= simple_form_for @accomplishment, data: {name: "new-accomplishment-form"}, remote: true do |f| %>
  <%= f.error_notification %>
  <div class="row-fluid add-new-accomplishment">
    <div class="span12">
      <%= f.input :title, label: false %>
    </div>
  </div>
  <div class="row-fluid add-new-accomplishment">
    <div class="span12 text-left">
      <%= f.button :submit, "Add this accomplishment" %>
    </div>
  </div>
<% end %>
