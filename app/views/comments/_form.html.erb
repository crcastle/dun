<%= simple_form_for [@comment.accomplishment, @comment] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :message %>
    <%= f.input :user_id %>
    <%= f.input :accomplishment_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
